<% @categories.each do |cate|  %>
  <h3 id="<%= cate.id %>">
    <%= cate.name %> <br> 
  </h3>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>成果名称</th>
        <th>完成单位</th>
        <th>完成人</th>
        <th>获奖等级</th>
        <th>年度</th>
      </tr>
    </thead>
    <% cate.teaching_achievements.each do |course| %>
      <tbody>
        <tr>
          <td> <%= link_to course.name, course.link, :target => "_blank" %> </td>
          <td> <%= course.department %> </td>
          <td> <%= course.charge_person%> </td>
          <td> <%= course.level%> </td>
          <td> <%= course.year %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
