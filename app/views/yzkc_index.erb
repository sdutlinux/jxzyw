<% @categories.each do |cate|  %>
  <h3 id="<%= cate.id %>">
    <%= cate.name %> <br> 
  </h3>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>课程名称</th>
        <th>所属单位</th>
        <th>课程负责人</th>
        <th>课程等级</th>
        <th>年度</th>
      </tr>
    </thead>
    <% cate.quality_courses.each do |course| %>
      <tbody>
        <tr>
          <td> <%= link_to course.name, course.link, :target => "_blank" %> </td>
          <td> <%= course.department %> </td>
          <td> <%= course.charge_person%> </td>
          <td> <%= course.course_level %> </td>
          <td> <%= course.year %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
